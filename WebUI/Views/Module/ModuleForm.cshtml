@model HIS.Domain.Models.Module.Module
@{
    ViewBag.Title = "Module";
    Layout = null;
}
<section>
    @Styles.Render("~/bundles/FormDesign")
</section>

        <form action="@Url.Action("ModuleForm","Module")" class="form-horizontal" id="frmModule">
            @Html.HiddenFor(a => a.ModuleId)
            @Html.HiddenFor(a => a.OrganizationId)
            @Html.HiddenFor(a => a.CreatedDate)
            @Html.HiddenFor(a => a.CreatedUserId)
            @Html.HiddenFor(a => a.UpdateDate)
            @Html.HiddenFor(a => a.UpdateUserId)

            <div class="form-body" style="margin-top:32px">
                <div class="title"><h1 class="form-section">Module Detail</h1></div>  
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="control-label col-md-3"> Name</label>
                            <div class="col-md-9">
                                @Html.TextBoxFor(a => a.ModuleName, new { data_fieldname = "Module", @class = "form-control required",title="Module name is required" })

                                <span class="help-block"></span>
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-3"> Code</label>
                            <div class="col-md-9">
                                @Html.TextBoxFor(a => a.ModuleCode, new { data_fieldname = "Module", @class = "form-control required", title = "Module code is required" })

                                <span class="help-block"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3"> Core</label>
                            <div class="col-md-9">
                                @Html.DropDownListFor(a => a.IsCore, (List<SelectListItem>)ViewBag.CoreModule, new { data_fieldname = "IsCore", @class = "form-control" })
                                <span class="help-block"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label col-md-3"> Price</label>
                            <div class="col-md-9">
                                @Html.TextBoxFor(a => a.ModulePrice, new { data_fieldname = "Price", @class = "form-control required", title = "Module price is required" })

                                <span class="help-block"></span>
                            </div>
                        </div>
                    </div>
                    <!--/span-->
                    <!--/span-->
                </div>
                <!--/row-->

            </div>
            <div class="form-actions">
                <div class="row">
                    <div class="col-md-6">
                        <div class="row">
                            <div class="col-md-offset-3 col-md-9">
                                <button type="button" class="btn green" onclick="Global.SubmitFormViaAjax('frmModule')">Submit</button>
                                <button type="reset" class="btn default">Cancel</button>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6"> </div>
                </div>
            </div>
        </form>
